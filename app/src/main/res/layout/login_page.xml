<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loading_page"
    android:background="@drawable/bg_login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="LOG IN"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="270dp"
        android:layout_marginLeft="-140dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/shadow" />

    <ImageView
        android:id="@+id/shape"
        android:layout_width="330dp"
        android:layout_height="130dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="-60dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="230dp"
        android:background="@android:color/transparent"
        android:hint="EMAIL"
        android:paddingLeft="20dp"
        android:textColorHint="#504F4F" />

    <EditText
        android:id="@+id/password"
        android:layout_width="260dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/email"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingRight="25dp"
        android:textColorHint="#504F4F" />

    <ImageButton
        android:id="@+id/lgnbtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignRight="@id/shape"
        android:layout_marginTop="250dp"
        android:layout_marginRight="-60dp"
        android:background="@drawable/lgn_btn"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="140dp"
        android:background="@drawable/shadow"
        android:layout_below="@id/shape"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-45dp"/>

    <ImageButton
        android:id="@+id/regbtn"
        android:layout_width="180dp"
        android:layout_height="57dp"
        android:layout_below="@id/shape"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/register_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/regbtn"
        android:layout_marginTop="30dp"
        android:text="Forgot password"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="15dp" />




</RelativeLayout>